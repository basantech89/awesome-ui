{
	"compileOnSave": true,
	"compilerOptions": {
		"strict": true,
		"target": "es5",
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"module": "esnext",
		"moduleResolution": "node",
		"jsx": "react",
		"lib": ["dom", "esnext"],
		"isolatedModules": true,
		"skipLibCheck": true,
		"baseUrl": "./src"
	},
	"exclude": [
		"**/dist",
		"node_modules",
		"**/node_modules"
	],
	"include": ["src"]
}
